<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="match_parent"
    android:focusable="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/background"
        android:background="#40000000"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_panel"
        android:clickable="true"
        android:background="@drawable/cornered_background"
        android:layout_height="100dp"
        android:focusable="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginStart="32dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="48dp"
                android:id="@+id/tg_share"
                android:src="@drawable/ic_telegram_tranparent"
                android:layout_height="48dp">
            </ImageView>
            <ImageView
                android:layout_marginStart="32dp"
                android:layout_width="48dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/gmail_share"
                android:src="@drawable/ic_gmail_transparent"
                android:layout_height="48dp">
            </ImageView>
            <ImageView
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="48dp"
                android:id="@+id/default_share"
                android:src="@drawable/ic_more_transparent"
                android:layout_height="48dp">
            </ImageView>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>