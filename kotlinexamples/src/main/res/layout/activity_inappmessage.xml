<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cs_half_gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:paddingHorizontal="8dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:id="@+id/iamId"
            android:hint="In-app message id"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:hint="Event name"
            android:id="@+id/eventName"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:text="Preload in-app messages"
            android:id="@+id/preload"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:text="Show anyway"
            android:id="@+id/show"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:text="Show only if loaded"
            android:id="@+id/showIfLoaded"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/inAppMessagesContainer"
        android:layout_height="match_parent"/>
</RelativeLayout>